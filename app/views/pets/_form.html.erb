<%= form_for pet do |f|%>

  <div class="form-group">
    <%= f.label 'Species' %>
    <%= f.select :species, ['Dog', 'Cat', 'Turtle', 'Fish'], {}, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label 'Description' %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label 'Found At' %>
    <%= f.date_field :found_at, class: 'form-control' %>
  </div>

  <%= f.submit class: 'btn btn-primary btn-block' %>



<% end %>
